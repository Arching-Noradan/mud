<?xml version="1.0" encoding="koi8-r"?>
<craftmodel>
	<skills>
		<skill id="skill1" filename="skill1.xml" />
		<skill id="skill2">
		</skill>
	</skills>

	<crafts dependencies="dependencies.xml" base_crafts="2" crafts_bonus="0" skills_cap="80" skills_bonus="80">
		<craft id="craft1" filename="craft1.xml">
			<name>Craft 1</name>	<!-- craft based of craft from file craft1.xml but with overridden name -->
		</craft>
		<craft id="CRAFT_TAILOR">
			<name>Портной</name>
			<sockets required="4" additional="4" />

			<skills>
				<skill id="ID of first required skill" base="yes" train_threshold="500" /> <!-- override skill parameter -->
				<skill id="ID of second required skill" base="yes" />

				<skill id="ID of first additional skill" train_threshold="1000" /> <!-- override skill parameter -->
				<skill id="ID of second additional skill" />
			</skills>

			<recipes>
				<recipe id="ID of available recipe" />
			</recipes>
		</craft>
	</crafts>

	<materials>
		<material id="material1" filename="material1.xml" />
		<material id="meterial2">
		</material>
	</materials>

	<recipes>
		<recipe id="recipe1" filename="recipe1.xml" />
		<recipe id="recipe2">
			<name>Recipe 2</name>
			<training_cap>150</training_cap>	<!-- Improves skill up to this value -->
			<requirements>
				<skills>
					<skill id="ID of the first required skill" key="yes" />
					<skill id="ID of the second required skill" />
				</skills>
				<tools>
					<tool type="Type of the first required tool" min_qualtiy="50" />
					<tool type="Type of the second required tool" min_qualtiy="50" />
				</tools>
				<materials>
					<material id="ID of the first material type" base="yes" min_quality="50" amount="1" />
					<material id="ID of the second material type" min_quality="50" amount="1" />
				</materials>
				<items>
					<item vnum="VNum of required item" />
					<item recipe="ID of recipe used to craft item" />
				</items>
			</requirements>
			<outcome>
				<attributes>
					<!-- required attributes -->
					<prototype vnum="VNum of item prototype" />
					<timer>50</timer>
					<durability>50</durability>
					<weight>50</weight>
					<cost>100</cost>
					<remorts>0</remorts>
					<description>
						<short>Short description of the new item.</short>
						<long>Long description of the new item.</long>
					</description>

					<!-- Unnecessary attributes -->
					<type>Overridden</type>
					<wear_to>
						<neck />
						<!-- TODO: List possible options to wear item
						...
						-->
					</wear_to>
					<!-- TODO: Continue from list of extraflags...
					-->
				</attributes>
			</outcome>
		</recipe>
	</recipes>
</craftmodel>

